@model Economic_Game.Models.Game

@{
    ViewBag.Title = "Waiting";
}

    <script type="text/javascript" src="~/Scripts/waiting.js"></script>

<div class="container body-content">

        @using (Html.BeginForm("Waiting", "Home", FormMethod.Post, new { id = "messageForm" }))
        {
            @Html.HiddenFor(x => x.GameID)
            @Html.HiddenFor(x => x.CurrentRound)

            <table class="table login-table">
                <tr>
                    <th colspan="3" class="text-center">
                        <h1>
                            Investment Game
                        </h1>
                        <h3>BUYER PORTAL</h3>
                    </th>
                </tr>
                <tr>
                    <td colspan="3">
                        <br /><br />
                        <div id="progressbar"></div>

                        <div id="progressMessageArea" style="text-align: center; font-weight: bold; height: 50px; vertical-align: middle;">

                            <div id="progressMessage1">
                                Waiting for seller's response...
                            </div>
                            <div id="progressMessage2">
                                Response received...
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td colspan="3">
                    </td>
                </tr>
            </table>
        }
</div>