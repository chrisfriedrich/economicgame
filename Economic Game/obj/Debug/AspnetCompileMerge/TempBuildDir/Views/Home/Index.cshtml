    @using (Html.BeginForm())
    {
        <table class="table login-table">
            <tr>
                <th colspan="3" class="text-center">
                    <h1>
                        Economic Game
                    </h1>
                    <h3>BUYER PORTAL</h3>
                </th>
            </tr>
            <tr>
                <td colspan="3">
                    <p class="text-center">
                        <strong>COMMUNICATION MODE:</strong> &nbsp;&nbsp; Seller to Buyer - <span style="font-weight: bold; color: red;">ONE WAY</span>
                    </p>
                </td>
            </tr>
            <tr>
                <td colspan="3">
                    <div id="progressMessageArea" style="text-align: center; font-weight: bold; height: 50px; vertical-align: middle;">
                        <div id="progressMessage1">
                            Searching for Seller Players...
                        </div>
                        <div id="progressMessage2">
                            Seller Player found...
                        </div>
                        <div id="progressMessage3">
                            Setting up game...
                        </div>
                        <div id="progressMessage4">
                            Waiting for Player to join the game...
                        </div>
                        <div id="progressMessage5">
                            Ready to Play.  Enter your Amazon ID and click <strong>Play</strong> to begin.
                        </div>
                    </div>
                </td>
            </tr>
            <tr>
                <td colspan="3">
                    <p style="width: 90%; margin: 0 auto;">
                        Thank you for choosing to play today. @*Please wait while we attempt to match you with a player.*@<br /><br />

                        Communication enabled for this event is: &nbsp;
                        <strong><em>Seller to Buyer ONE-WAY</em></strong>.<br />
                        
                        This means that the Seller (other player) can communicate with you, however you will not be able to respond.<br /><br />

                        Please do not refresh your browser or use the back button during play as this will cause communication issues and may corrupt your results.<br /><br />

                        Please enter your Amazon ID in the field below, and click "Play".<br /><br />@* once a match has been found.*@
                        Once you have clicked <strong>Play</strong> the game will attempt to match you with another player.&nbsp;&nbsp;
                        This process may take up to a minute.
                    </p>
                </td>
            </tr>
            <tr>
                <td style="width: 25%;"></td>
                <td style="width: 50%;">
                    <p class="text-center">
                        @Html.Label("Amazon ID", new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.AmazonID, new { @class = "form-control text-center", @style="margin: 0 auto;" })
                        @Html.ValidationMessageFor(model => model.AmazonID, "", new { @class = "text-danger" })
                    </p>
                </td>
                <td></td>
            </tr>

            <tr>
                <td colspan="3">
                    <p class="text-center">
                        <button id="submitButton" type="submit" class="btn btn-default"><span class="glyphicon glyphicon-ok"></span>&nbsp;&nbsp;Play</button>
                    </p>
                </td>
            </tr>
        </table>


    }
