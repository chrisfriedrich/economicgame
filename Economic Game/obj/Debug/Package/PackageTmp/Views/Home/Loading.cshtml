@model Economic_Game.Models.Game

@{
    ViewBag.Title = "Loading";
}

    <script type="text/javascript" src="~/Scripts/loading.js"></script>
    <div class="container body-content">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(x => x.GameID)
            <table class="table login-table">
                <tr>
                    <th colspan="3" class="text-center">
                        <h1>
                            Investment Game
                        </h1>
                        <h3>BUYER PORTAL</h3>
                    </th>
                </tr>
                <tr>
                    <td colspan="3">
                        <br /><br />
                        <div id="progressbar" class="progress">
                            <div class="progress-bar progress-bar-striped active progress-bar-success" role="progressbar"></div>
                        </div>
                        <div id="progressMessageArea" style="text-align: center; font-weight: bold; height: 50px; vertical-align: middle;">

                            <div id="progressMessage1">
                                Searching for Players...
                            </div>
                            <div id="progressMessage2">
                                Seller Player found...
                            </div>
                            <div id="progressMessage3">
                                Waiting for Player to join the game...
                            </div>
                            <div id="progressMessage4">
                                Player joined. Setting up game...
                            </div>
                            <div id="progressMessage5">
                                Ready to Play.  Click <strong>Play</strong> to begin.
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td colspan="3">
                        <p class="text-center">
                            <button id="submitButton" type="submit" class="btn btn-default"><span class="glyphicon glyphicon-ok"></span>&nbsp;&nbsp;Play</button>
                        </p>
                    </td>
                </tr>
            </table>
        }
    </div>
