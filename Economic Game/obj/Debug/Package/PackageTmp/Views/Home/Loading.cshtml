@model Economic_Game.Models.Game

@{
    ViewBag.Title = "Loading";
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <link href="~/Content/jquery-ui.css" type="text/css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.12.4.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery-ui-1.12.0.js" type="text/javascript"></script>
    <link href="~/Content/bootstrap.css" type="text/css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js" type="text/javascript"></script>
    <link href="~/Content/Site.css" type="text/css" rel="stylesheet" />
    <style>
        #progressbar {
            width: 800px;
            margin: 0 auto;
        }

        #progressbar div {
            background-color: green;
        }
    </style>
    <script>
        $(document).ready(function () {

            $('#submitButton').prop('disabled', true);

            var $pG = $('#progressbar').progressbar();

            $pG.progressbar({
                value: 1
            });

            setTimeout(function () {
                $('#progressMessage1').fadeIn(200);
                var pGress = setInterval(function () {
                    var pVal = $pG.progressbar('option', 'value');
                    var pCnt = !isNaN(pVal) ? (pVal + 1) : 1;
                    if (pCnt > 40) {
                        clearInterval(pGress);
                    } else {
                        $pG.progressbar({
                            value: pCnt
                        });
                    }
                }, 450);
            }, 0);

            setTimeout(function () {
                $('#progressMessage1').fadeOut(200);
            }, 13800);

            setTimeout(function () {
                $('#progressMessage2').fadeIn(200);
                var pGress = setInterval(function () {
                    var pVal = $pG.progressbar('option', 'value');
                    var pCnt = !isNaN(pVal) ? (pVal + 1) : 1;
                    if (pCnt > 60) {
                        clearInterval(pGress);
                    } else {
                        $pG.progressbar({
                            value: pCnt
                        });
                    }
                }, 250);
            }, 13800);

            setTimeout(function () {
                $('#progressMessage2').fadeOut(200);
            }, 14500);

            setTimeout(function () {
                $('#progressMessage3').fadeIn(200);
                var pGress = setInterval(function () {
                    var pVal = $pG.progressbar('option', 'value');
                    var pCnt = !isNaN(pVal) ? (pVal + 1) : 1;
                    if (pCnt > 80) {
                        clearInterval(pGress);
                    } else {
                        $pG.progressbar({
                            value: pCnt
                        });
                    }
                }, 180);
            }, 14700);

            setTimeout(function () {
                $('#progressMessage3').fadeOut(200);
            }, 17000);

            setTimeout(function () {
                $('#progressMessage4').fadeIn(200);
                var pGress = setInterval(function () {
                    var pVal = $pG.progressbar('option', 'value');
                    var pCnt = !isNaN(pVal) ? (pVal + 1) : 1;
                    if (pCnt > 90) {
                        clearInterval(pGress);
                    } else {
                        $pG.progressbar({
                            value: pCnt
                        });
                    }
                }, 200);
            }, 17200)
    
            setTimeout(function () {
                $('#progressMessage4').fadeOut(500);
            }, 24000);

            setTimeout(function () {
                $('#progressMessage5').show();
                var pGress = setInterval(function () {
                    var pVal = $pG.progressbar('option', 'value');
                    var pCnt = !isNaN(pVal) ? (pVal + 1) : 1;
                    if (pCnt > 100) {
                        clearInterval(pGress);
                    } else {
                        $pG.progressbar({
                            value: pCnt
                        });
                    }
                }, 30);
            }, 24600)

            //setTimeout(function () {
            //    $('#progressMessage5').fadeOut(200);
            //}, 24500);

            setTimeout(function () {
                $('#submitButton').prop("disabled", false);
            }, 24700);

            setTimeout(function () {
                if ($('#submitButton').text.length > 0) {
                    $('#submitButton').prop("class", "btn btn-default btn-success");
                }
            }, 24700);
        });
        </script>
